{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@core/*": ["core/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "strict": true,
    "typeRoots": ["./src/types"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": [ "dist","node_modules"]
}
